---
import { getCollection, render, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await render(post);

function formatDate(date: Date) {
  return date.toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article class="post-page">
    <!-- Post Header -->
    <header class="post-header container animate-fade-up">
      <div class="post-breadcrumb">
        <a href="/blog">← 返回博客</a>
      </div>

      <div class="post-meta">
        <time datetime={post.data.pubDate.toISOString()}>
          {formatDate(post.data.pubDate)}
        </time>
        {post.data.updatedDate && (
          <span class="updated-date">
            · 更新于 {formatDate(post.data.updatedDate)}
          </span>
        )}
      </div>

      <h1 class="post-title">{post.data.title}</h1>
      <p class="post-desc">{post.data.description}</p>

      {(post.data.tags ?? []).length > 0 && (
        <div class="post-tags">
          {(post.data.tags as string[]).map((t) => (
            <a href={`/tags/${t}`} class="tag tag-link">{t}</a>
          ))}
        </div>
      )}

      {post.data.heroImage && (
        <img
          src={post.data.heroImage}
          alt={post.data.title}
          class="post-hero-image"
        />
      )}
    </header>

    <!-- Post Content -->
    <div class="container">
      <div class="prose animate-fade-up animate-delay-1">
        <Content />
      </div>

      <!-- Navigation -->
      <div class="post-nav animate-fade-up animate-delay-2">
        <a href="/blog" class="btn btn-outline">← 返回博客列表</a>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .post-page {
    padding-bottom: 4rem;
  }

  .post-header {
    padding-top: 3rem;
    padding-bottom: 2.5rem;
    border-bottom: 1px solid var(--border);
    margin-bottom: 3rem;
  }

  .post-breadcrumb {
    margin-bottom: 1.5rem;
  }

  .post-breadcrumb a {
    font-size: 0.88rem;
    color: var(--text-muted);
    text-decoration: none;
    transition: color var(--transition);
  }

  .post-breadcrumb a:hover {
    color: var(--primary);
  }

  .post-meta {
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-bottom: 1rem;
    font-family: 'JetBrains Mono', monospace;
  }

  .updated-date {
    color: var(--text-muted);
  }

  .post-title {
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    font-weight: 800;
    line-height: 1.25;
    margin-bottom: 0.75rem;
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .post-desc {
    font-size: 1.05rem;
    color: var(--text-muted);
    line-height: 1.7;
    margin-bottom: 1.25rem;
    max-width: 640px;
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag-link {
    text-decoration: none;
    display: inline-block;
    transition: background .2s, color .2s, border-color .2s, transform .15s;
  }

  .tag-link:hover {
    background: var(--gradient);
    color: #fff;
    border-color: transparent;
    transform: translateY(-1px);
  }

  .post-hero-image {
    width: 100%;
    max-height: 420px;
    object-fit: cover;
    border-radius: var(--radius-lg);
    margin-top: 2rem;
    box-shadow: var(--shadow-lg);
  }

  .post-nav {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }
</style>
